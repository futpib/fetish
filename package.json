{
  "private": true,
  "xo": {
    "globals": [
      "fetch",
      "Promise"
    ],
    "rules": {
      "no-restricted-globals": [
        "error",
        "Promise",
        "fetch",
        "Headers",
        "Request",
        "Response"
      ],
      "node/no-deprecated-api": [
        "error",
        {
          "ignoreModuleItems": [
            "url.parse"
          ]
        }
      ]
    },
    "extends": [
      "eslint-config-xo-overrides"
    ]
  },
  "ava": {
    "verbose": true
  },
  "devDependencies": {
    "ava": "^3.13.0",
    "coveralls": "^3.1.0",
    "eslint-config-xo-overrides": "^1.4.0",
    "globby": "^11.0.1",
    "husky": "^4.3.0",
    "nyc": "^15.1.0",
    "ramda": "^0.27.1",
    "xo": "^0.34.1"
  },
  "scripts": {
    "test": "xo && nyc ava"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-push": "yarn test"
    }
  }
}
