{
  "private": true,
  "xo": {
    "globals": [
      "fetch",
      "Promise"
    ],
    "rules": {
      "no-restricted-globals": [
        "error",
        "Promise",
        "fetch",
        "Headers",
        "Request",
        "Response"
      ],
      "node/no-deprecated-api": [
        "error",
        {
          "ignoreModuleItems": [
            "url.parse"
          ]
        }
      ]
    },
    "extends": [
      "eslint-config-xo-overrides"
    ]
  },
  "devDependencies": {
    "ava": "^2.0.0",
    "coveralls": "^3.0.3",
    "eslint-config-xo-overrides": "^1.3.0",
    "globby": "^9.1.0",
    "husky": "^2.3.0",
    "nyc": "^12.0.2",
    "ramda": "^0.26.1",
    "xo": "^0.24.0"
  },
  "scripts": {
    "test": "xo && nyc ava"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-push": "yarn test"
    }
  },
  "dependencies": {
    "lerna": "^2.11.0"
  }
}
