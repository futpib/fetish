{
  "private": true,
  "xo": {
    "globals": [
      "fetch",
      "Promise"
    ],
    "rules": {
      "no-restricted-globals": [
        "error",
        "Promise",
        "fetch",
        "Headers",
        "Request",
        "Response"
      ],
      "node/no-deprecated-api": [
        "error",
        {
          "ignoreModuleItems": [
            "url.parse"
          ]
        }
      ],
      "unicorn/prefer-module": "off"
    },
    "extends": [
      "eslint-config-xo-overrides"
    ]
  },
  "ava": {
    "verbose": true
  },
  "devDependencies": {
    "ava": "^4.0.0",
    "coveralls": "^3.1.1",
    "eslint-config-xo-overrides": "^1.5.0",
    "globby": "^11.0.4",
    "husky": "^7.0.4",
    "nyc": "^15.1.0",
    "ramda": "^0.30.0",
    "wsrun": "^5.2.4",
    "xo": "^0.47.0"
  },
  "scripts": {
    "test": "xo && nyc ava"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-push": "yarn test"
    }
  },
  "packageManager": "yarn@3.2.0"
}
